#toWords
  .modal-dialog
    width: 640px
    margin: 75px auto
    .modal-content
      width: 640px
      height: 450px
      overflow: hidden
      font-family: serif, font-default
  #study_inline,
  #towordsLearning
    top: 0
    left: 0
    right: 0
    bottom: 0
    position: absolute
  #towordsLearning
    padding: 30px
    font-family: serif, font-default
    .title
      clearfix()
      position: relative
      margin-bottom: 30px
      .word
        float: left
        margin-top: 10px
        p
          font-size: 54px
          line-height: 54px
          margin-bottom: 10px
      span
        margin-right: 8px
      .buttons
        top: 0px
        right: 0px
        height: 54px
        overflow: hidden
        margin-top: 10px
        line-height: 54px
        position: absolute
        .btn
          transition: none
          position: relative
          .fa
            font-size: font-size + 10
            line-height: line-height + 4
            transition: font-size 0.5s ease
            transition: margin-right 0.5s ease
          span
            max-width: 0px
            overflow: hidden
            vertical-align: top
            display: inline-block
            height: line-height + 4
            line-height: line-height + 4
            transition: max-width 0.5s ease
          .regret_time
            top: 0px
            right: 0px
            opacity: 1
            width: 20px
            height: 20px
            display: block
            font-size: 12px
            line-height: 20px
            position: absolute
            text-align: center
            font-style: normal
            border-radius: 50%
            transition: 0.5s ease
            color: color-font-light
            background: color-palette-danger
          &:hover
            margin-left: 8px
            background: color-link
            .fa
              margin-right: 8px
              font-size: font-size + 6
            span
              max-width: 200px
            .regret_time
              top: -30px
              opacity: 0
          &.disabled:active:hover
            box-shadow: none
          &.disabled
            background: transparent
            color: color-font-grey
          &.disabled:hover
            background: color-background-grey
          &:active:hover
            box-shadow: inset 0 3px 5px rgba(0,0,0,0.2)
    .result
      height: 100%
    .options
      & > div
        cursor: pointer
        padding: 15px 10px
        span
          font-size: font-size + 2
          vertical-align: bottom
          line-height: 24px
        &:hover
          background: color-link
          color: color-font-light
          .Shortcuts
            margin: 0 20px 0 14px
            color: color-link
            background: color-background-light
        &:active:hover
          box-shadow: inset 0 3px 5px rgba(0,0,0,0.2)
      .iknow
        font-size: font-size + 6
      .Shortcuts
        width: 24px
        height: 24px
        text-align: center
        margin-right: 16px
        border-radius: 2px
        display: inline-block
        transition: margin 0.2s ease
        background: color-background-grey
        &:before
          text-transform: uppercase
    .translate
      font-size: font-size + 4
    .example
      border-left: 5px solid color-border
      padding-left: 15px
      .sentense
        font-size: font-size + 6
        font-style: italic
      .exp-translate
        font-size: font-size + 2
    .learningResult
      left: 0px
      right: 0px
      opacity: 1
      bottom: -40px
      position: absolute
      padding: 10px 15px
      color: color-font-light
      transition: bottom 0.2s ease, opacity 0.2s ease 2s
    #timer
      left: 0px
      right: 0px
      bottom: 0px
      position: absolute
      div
        height: 3px
        transition: background 0.5s ease
    &.animate
      .learningResult
        opacity: 0
        bottom: 0px

